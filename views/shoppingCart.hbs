{{#if userCart}}
<div style="padding-top: 30px;">
    <table class="table table-bordered">
        <thead>
            <tr class=" table-active">
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">poduct Name</th>
                <th scope="col" class="text-center">product quantity</th>
                <th scope="col" class="text-center">product price</th>
                <th scope="col" class="text-center">Delete product</th>
            </tr>
        </thead>
        <tbody>
            {{#each userCart}}
            {{#each this.selectedProduit as |val index| }}
            <tr>
                <th scope="row" class="text-center">{{add @index}}</th>
                <td class="text-center">
                    {{val.name}}

                </td>
                <td class="text-center">
                    {{#if (checkQuantity @val.quantity)}}
                    <a href="#" class="btn disabled" style="margin-right: 30px;"><i class="fas fa-minus-square"></i></a>
                    {{else}}
                    <a href="/decreaseProduct/{{index}}" class="btn" style="margin-right: 30px;"><i
                            class="fas fa-minus-square"></i></a>
                    {{/if}}
                    {{val.quantity}}
                    <a href="/inceaseProduct/{{index}}" style="margin-left: 30px;"><i
                            class="fas fa-plus-square"></i></a>
                </td>
                <td class="text-center">{{val.prix}}</td>
                <td class="text-center"><a href="/deleteProduct/{{index}}" class="btn btn-danger float-right">delet <i
                            class="fas fa-trash-alt"></i></a></td>
            </tr>
            {{/each}}
            {{/each}}
            <tr class=" table-primary">

                <td colspan="3" style="font-weight: bold;"> Total Price</td>

                <td class="text-center table-primary">$ {{#each userCart}}{{this.totalPrix}}{{/each}}</td>


            </tr>

        </tbody>
    </table>
</div>
<div class="text-center">
    <a href="/checkout" class="btn btn-success" style="width: 200px;">checkout</a>
</div>

{{else}}
{{#if hasCart}}
<h1 class="text-center" style="padding-top: 200px;">your Shopping cart is expired </h1>
<div class="text-center">
    <a href="/" class=" btn btn-success"> produits</a>
    {{else}}
    <h1 class="text-center" style="padding-top: 200px;">your Shopping cart is Empty </h1>
    <div class="text-center">
        <a href="/" class=" btn btn-success"> produits</a>
        {{/if}}


    </div>
    {{/if}}